# ===========================================
# Buffett Bot Configuration
# ===========================================
# Copy this file to .env and fill in your keys
# NEVER commit .env to version control

# -----------------------------
# Required API Keys
# -----------------------------

# Anthropic Claude API
# Sign up: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Finnhub (free tier: 60 requests/min)
# Sign up: https://finnhub.io/
# Used for: analyst price targets, news monitoring
FINNHUB_API_KEY=your_finnhub_api_key_here

# NOTE: yfinance is used for stock data (no API key needed)

# -----------------------------
# Optional: Paper Trading
# -----------------------------

# Alpaca (paper trading is free)
# Sign up: https://alpaca.markets/
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_PAPER=true

# -----------------------------
# Notifications (pick one or more)
# -----------------------------

# Option 1: Email (SMTP)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# EMAIL_TO=your_email@gmail.com

# Option 2: Telegram Bot
# 1. Create bot via @BotFather on Telegram
# 2. Get your chat ID from @userinfobot
# TELEGRAM_BOT_TOKEN=your_bot_token_here
# TELEGRAM_CHAT_ID=your_chat_id_here

# Option 3: Ntfy.sh (simple push notifications)
# 1. Install ntfy app on phone
# 2. Pick a unique topic name
# NTFY_TOPIC=buffett-bot-yourname
# NTFY_SERVER=https://ntfy.sh

# Option 4: Discord Webhook
# 1. In Discord: Server Settings → Integrations → Webhooks
# 2. Create webhook, copy URL
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# -----------------------------
# Bot Configuration
# -----------------------------

# How many companies to analyze deeply per month
MAX_DEEP_ANALYSES=10

# Margin of safety threshold (0.20 = 20%)
MIN_MARGIN_OF_SAFETY=0.20

# Portfolio value (for position sizing calculations)
PORTFOLIO_VALUE=50000

# Maximum single position size (0.15 = 15%)
MAX_POSITION_PCT=0.15

# Kill switch: set to false to disable weekly auto-trading
# (Alpaca keys stay configured, manual trades still work)
AUTO_TRADE_ENABLED=true

# Set to false to disable automated monthly briefing
# (you can still run manually: docker compose run --rm buffett-bot)
MONTHLY_BRIEFING_ENABLED=true

# Maximum sector concentration (0.30 = 30%)
MAX_SECTOR_PCT=0.30

# Database path
DATABASE_PATH=./data/buffett_bot.db

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
